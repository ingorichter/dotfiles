## http://git-scm.com/book/en/Customizing-Git-Git-Configuration
## default user
[user]
	useConfigOnly = true
	name = Ingo Richter

[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true

[color "branch"]
	current = yellow bold
	local = green bold
	remote = cyan bold

[color "status"]
	added = "green bold 22"
	changed = "yellow bold"
	untracked = "red bold"

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse

[color "diff-highlight"]
        oldNormal = red bold
        oldHighlight = "red bold 52"
        newNormal = "green bold"
        newHighlight = "green bold 22"

[core]
	excludesfile = ~/.gitignore_global
	editor = vim
	pager = git-split-diffs --color | less -RFX

[push]
	default = current

[alias]
	ci = commit
	br = branch
	st = status
	co = checkout
	unstage = reset HEAD --
	last = log -1 HEAD
	visual = !gitk
	ghcpr = "!git symbolic-ref HEAD | sed -e 's/^refs\\/heads\\///' | awk '{printf \"https://git.corp.adobe.com/webpa/sparkler-shell/compare/%s?expand=1\", $1}' | xargs open"
	la = "!git config -l | grep alias | cut -c 7-"
	blog = "!git log --graph --decorate --pretty=oneline --abbrev-commit --all"
	identity = "! git config user.name \"$(git config user.$1.name)\"; git config user.email \"$(git config user.$1.email)\"; git config user.signingkey \"$(git config user.$1.signingkey)\"; :"

[url "https://"]
	insteadOf = git://

[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f

[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process

[diff]
    algorithm = minimal
    compactionHeuristic = true
    renames = true
    tool = difftastic

[difftool]
    prompt = false

[difftool "difftastic"]
    cmd = difft "$LOCAL" "$REMOTE"

[cola]
	spellcheck = false

[commit]
	# template = /Users/irichter/.stCommitMsg
	gpgSign = true
	template = /Users/ingorichter/.stCommitMsg

[fetch]
	prune = true

[includeIf "gitdir:~/develop/work/"]
	path = ~/.dotfiles/git/gitcorp.gitconfig

[includeIf "gitdir:~/develop/fun/"]
	path = ~/.dotfiles/git/github.gitconfig

[gpg]
	program = gpg

[pull]
	rebase = false

[core]
    whitespace = trailing-space,space-before-tab

[apply]
    whitespace = fix
[init]
	defaultBranch = main

# Delta
[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[add.interactive]
    useBuiltin = false # required for git 2.37.0

[delta]
    navigate = true    # use n and N to move between diff sections
    light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
	side-by-side = true

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
