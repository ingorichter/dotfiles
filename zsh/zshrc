# The following lines were added by compinstall

zstyle ':completion:*' completer _expand _complete _ignored _correct _approximate
zstyle :compinstall filename '${HOME}/.zshrc'
zstyle '*:compinit' arguments -D -i -u -C -w

autoload -Uz compinit; compinit
# compinit

# add site-functions added by brew packages
fpath=($HOMEBREW_FPATH $ZSH_FUNCTIONS $ZPLUG_FPATH $fpath)

autoload -U $ZSH_FUNCTIONS/*(:t)

# Which plugins would you like to load? (plugins can be found in ~/.oh-my-zsh/plugins/*)
# Custom plugins may be added to ~/.oh-my-zsh/custom/plugins/
# Example format: plugins=(rails git textmate ruby lighthouse)
# Add wisely, as too many plugins slow down shell startup.
# thefuck
plugins=(brew colorize command-not-found docker fd fzf git golang kubectl macos minikube node npm pass python react-native ripgrep rust sudo swiftpm tmux virtualenv web-search xcode yarn z)
source "${ZSH}/oh-my-zsh.sh"

# setup zplug
source ${HOME}/.zplug.zsh

