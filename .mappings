[general]
# =================================================================
# SHELL CONFIGURATIONS
# =================================================================
# ZSH Configuration
"zsh/zshrc"                                                         = "~/.zshrc"
"zsh/zprofile"                                                      = "~/.zprofile"
"zsh/zshenv"                                                        = "~/.zshenv"
"zsh/zsh-aliases"                                                   = "~/.zsh-aliases"
"zsh/functions"                                                     = "~/.zsh-functions"
"zsh/hooks"                                                         = "~/.zsh-hooks"
"zsh/themes/nick.zsh-theme"                                         = "~/.oh-my-zsh/themes/nick.zsh-theme"

# ZSH Plugins & Extensions
"zsh/fzf.zsh"                                                       = "~/.fzf.zsh"
"zsh/p10k.zsh"                                                      = "~/.p10k.zsh"
"zsh/zplug.zsh"                                                     = "~/.zplug.zsh"
"alias.d"                                                           = "~/.alias.d"

# =================================================================
# TERMINAL EMULATORS
# =================================================================
# Alacritty
"alacritty/alacritty.toml"                                          = "~/.config/alacritty/alacritty.toml"
"alacritty/alacritty.yml"                                           = "~/.config/alacritty/alacritty.yml"

# Kitty
"kitty/current-theme.conf"                                          = "~/.config/kitty/current-theme.conf"
"kitty/kitty.conf"                                                  = "~/.config/kitty/kitty.conf"

# iTerm2 & Terminal.app (macOS specific)
"iterm/com.googlecode.iterm2.plist"                                 = "~/Library/Preferences/com.googlecode.iterm2.plist"
"macos/com.apple.Terminal.plist"                                    = "~/Library/Preferences/com.apple.Terminal.plist"

#ghostty
"ghostty/config"                                                    = "~/.config/ghostty/config"

# =================================================================
# TERMINAL MULTIPLEXERS
# =================================================================
# Tmux
"tmux/tmux.conf"                                                    = "~/.tmux.conf"
"tmux/tmux-powerlinerc"                                             = "~/.tmux-powerlinerc"

# Zellij
"zellij"                                                            = "~/.config/zellij"

# =================================================================
# TEXT EDITORS
# =================================================================
# Emacs & Crafted Emacs
"emacs/config.el"                                                   = "~/.crafted-emacs/config.el"
"emacs/early-config.el"                                             = "~/.crafted-emacs/early-config.el"
"emacs/ingo-config.el"                                              = "~/.emacs.d/ingo-config.el"
"emacs/crafted-emacs/early-init.el"                                 = "~/.emacs.d/early-init.el"
"emacs/crafted-emacs/init.el"                                       = "~/.emacs.d/init.el"
"emacs/crafted-emacs/custom-modules"                                = "~/.emacs.d/custom-modules"
"emacs/snippets"                                                    = "~/.emacs.d/snippets"

# =================================================================
# VERSION CONTROL
# =================================================================
# Git
"git/gitconfig"                                                     = "~/.gitconfig"
"git/gitignore_global"                                              = "~/.gitignore_global"

# =================================================================
# DEVELOPMENT TOOLS
# =================================================================
# GDB Debugger
"gdb/gdbinit"                                                       = "~/.gdbinit"

# File Manager
"yazi/keymap.toml"                                                  = "~/.config/yazi/keymap.toml"

# AsciiDoc
"asciidoc"                                                          = "~/.asciidoc"

# Utility Scripts
"scripts"                                                           = "~/.local/bin"

# =================================================================
# TEXT EXPANSION & AUTOMATION
# =================================================================
# Espanso
"espanso/default.yml"                                               = "~/Library/Preferences/espanso/match/default.yml"
"espanso/ccxjenkins.yml"                                            = "~/Library/Preferences/espanso/match/ccxjenkins.yml"
"espanso/email.yml"                                                 = "~/Library/Preferences/espanso/match/email.yml"

