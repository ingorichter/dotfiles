alias fixls='/System/Library/Frameworks/CoreServices.framework/Frameworks/LaunchServices.framework/Support/lsregister -kill -r -all system,local,user'
alias vcs='codesign --display --verbose=4'
alias jcli='java -jar ${DEV}/fun/jenkins-cli.jar -s '

alias adbgist='GITHUB_URL=https://git.corp.adobe.com/ /usr/local/bin/gist -c'

alias webserver='python -m SimpleHTTPServer'

# zip recursively without the mac xattr files/folders
# maczip name.zip folder2zip
alias maczip='zip -X -r '

# show only softlinks
alias sl="ls -G -ltra | grep '\->'"

# git delete all node_modules in monorepo
alias nukenm="lerna clean && rm -rf node_modules"